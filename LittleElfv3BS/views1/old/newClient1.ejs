<div class='ui main text container segment'>
  <div class='ui huge header'> New Client Signup</div>

  <form
    id = 'newClientForm'
    class='ui form'
    action='/registerNewClient'
    method='POST'
    >
    <div class='field'>
      <label>Email</label>
      <input type='email' name='email' placeholder="email">
    </div>
    <div class='field error'>
      <!--<p id='p' ><%= errors[0].msg %> </p> -->
      <label>First Name</label>
      <input type='text' id='fn' name='firstName' placeholder="first name">
    </div>
    <div class='field error'>
      <label>Last Name</label>
      <input type='text' name='lastName' placeholder="last name">
    </div>
    <div class='field error'>
      <label>Phone Number</label>
      <input type='text' name='phone' placeholder="phone number">
    </div>
    <div class='field'>
      <label>Password</label>
      <input type='password' name='password' placeholder="password">
    </div>
    <div class='field'>
      <label>Image</label>
      <input type='text' name='image' placeholder="image">
    </div>
    <div class='field'>
      <label> Blog content </label>
      <textarea name='body'></textarea>
    </div>
    <div class='field'>
      <input class='ui violet big basic button' type='submit'>
    </div>
  </form>
</div>

