<% include partials/header.ejs %>
<% include partials/navbar.ejs %>

<link rel='stylesheet' type='text/css' href='/stylesheets/login.css'>
<script type='text/javascript' src='/scripts/login.js'></script> <!--local script source-->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script> <!-- hosted jquery on client side -->

<div style='margin-top: 8em;' class='container-fluid'>
  <div class="col-md-12">
  <div class="col-md-10 col-md-offset-1 jumbotron">
    <h3 class="dark-grey">Login</h3>
    <% if (errors[0].msg !== 'hi') { %>
        <div class="alert alert-danger fade in col-lg-8 col-md-8 col-sm-8 col-lg-offset-2 col-md-offset-2 col-sm-offset-2">
          <p><strong> Could not log in </strong></p>
          <p> <%= errors[0].msg %> </p>
        </div>
    <% } %>
      <form action='/login' method='POST'  id="contact_form">
      <div class="row">

        <div class="form-group control-label col-lg-6 col-md-6 col-sm-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3">

          <label>Email</label>
          <div class='input-group'>
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <input
            type="email"
            name="email"
            class="form-control"
            id=""
            placeholder="email"
            value=<%= user.email %>
            >
          </div>

        </div>
        <div class="form-group control-label col-lg-6 col-md-6 col-sm-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3">
          <label>Password</label>
          <div class='input-group'>
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <input
            type="password"
            name="password"
            class="form-control"
            id=""
            placeholder="password"
            >
          </div>
        </div>

      <div class='col-lg-4 col-md-4 col-sm-4 col-lg-offset-4 col-md-offset-4 col-sm-offset-4'>
        <div class="form-group">
          <button type="submit" class="btn-lg btn-primary btn-block">LOGIN</button>
        </div>

        <div>
          <a href='/user/forgotPassword'> Forgot Password? </a>
        </div>
      </div>

      </div>
    </form>

  </div>
</div>
<div class='footer'><% include partials/footer.ejs %> </div>
</div>
