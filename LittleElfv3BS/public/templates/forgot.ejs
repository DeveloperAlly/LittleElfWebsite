<% include partials/header.ejs %>
<% include partials/navbar.ejs %>

<link rel='stylesheet' type='text/css' href='/stylesheets/login.css'>
<script type='text/javascript' src='/scripts/login.js'></script> <!--local script source-->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script> <!-- hosted jquery on client side -->

<div style='margin-top: 8em; margin-bottom: 1em;' class='container-fluid'>
  <div class="col-md-12">
  <div class="col-md-10 col-md-offset-1 jumbotron">
    <h3 class="dark-grey">Reset Password</h3>
      <% if (errors[0].msg !== 'hi') { %>
          <div class="alert alert-warning fade in col-lg-8 col-md-8 col-sm-8 col-lg-offset-2 col-md-offset-2 col-sm-offset-2">
            <p><strong> Oops! </strong></p>
            <h5> <%= errors[0].msg %> </h5>
          </div>
          <div class="alert fade in col-lg-8 col-md-8 col-sm-8 col-lg-offset-2 col-md-offset-2 col-sm-offset-2">
            <h4> Sign up instead? </h4>
            <div class="row">
              <a href='../clients/new'><button type="button" class="btn btn-success btn-lg">Client SignUp</button></a>
              <a href='../elves/new'><button type="button" class="btn btn-success btn-lg">Elf SignUp</button></a>
            </div>
            <h4>  </h4>
          </div>
      <% } %>
      <form action='/user/forgotPassword' method='POST'  id="forgotPW_form">
      <div class="row">

        <div class="form-group control-label col-lg-6 col-md-6 col-sm-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3">

          <label>Email</label>
          <div class='input-group'>
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <input
            type="email"
            name="email"
            class="form-control"
            id=""
            placeholder="email"
            required
            value = <%= user.email %>
            >
          </div>

        </div>
      </div>
      <div class='col-lg-4 col-md-4 col-sm-4 col-lg-offset-4 col-md-offset-4 col-sm-offset-4'>
        <div class="form-group">
          <button type="submit" class="btn-lg btn-primary btn-block">RETRIEVE</button>
        </div>

      </div>

      </div>
    </form>

  </div>
</div>
</div>

<% include partials/footer.ejs %>
